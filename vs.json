{
  // ===== CORE PERFORMANCE & SECURITY =====
  "telemetry.telemetryLevel": "off",
  "security.workspace.trust.untrustedFiles": "open",
  "security.promptForLocalFileProtocolHandling": false,

  // ===== FILE ASSOCIATIONS & HANDLING =====
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook",
    "*.exe": "default",
    "*.db": "default",
    "*.h5": "default",
    "*.xz": "default",
    "*.wasm": "default",
    "*.bin": "default"
  },
  "files.associations": {
    "*.py": "python",
    "*.html": "html",
    "*.tsx": "typescriptreact",
    "*.jsx": "javascriptreact",
    "*.vue": "vue",
    "*.env*": "dotenv",
    "Dockerfile*": "dockerfile",
    "*.mdx": "markdown"
  },

  // ===== PERFORMANCE OPTIMIZATIONS =====
  "editor.maxTokenizationLineLength": 2000,
  "editor.largeFileOptimizations": true,
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/.hg/store/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/.next/**": true,
    "**/coverage/**": true,
    "**/.nyc_output/**": true,
    "**/tmp/**": true,
    "**/temp/**": true
  },
  "workbench.reduceMotion": "off", // Enable for better visual experience with your custom CSS
  "editor.smoothScrolling": true, // Enable for smoother experience
  "workbench.list.smoothScrolling": true,
  "terminal.integrated.gpuAcceleration": "on",// Better than "off" for modern systems

  // ===== ENHANCED SEARCH PERFORMANCE =====
  "search.exclude": {
    "**/vendor/{[^l],?[^ai]}*": true,
    "**/public/{[^i],?[^n]}*": true,
    "**/node_modules": true,
    "**/dist": true,
    "**/build": true,
    "**/.next": true,
    "**/.nuxt": true,
    "**/coverage": true,
    "**/_ide_helper.php": true,
    "**/composer.lock": true,
    "**/package-lock.json": true,
    "**/yarn.lock": true,
    "**/pnpm-lock.yaml": true,
    "storage": true,
    ".phpunit.result.cache": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true
  },
  "files.exclude": {
    "**/.classpath": true,
    "**/.factorypath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/node_modules": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/*.log": true
  },

  // ===== NOTEBOOK & JUPYTER =====
  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "left"
  },
  "notebook.formatOnSave.enabled": true,
  "notebook.output.wordWrap": true,

  // ===== TERMINAL CONFIGURATION =====
  "terminal.integrated.defaultProfile.windows": "Command Prompt",
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.fontFamily": "MesloLGS NF, Geist Mono, JetBrains Mono",
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.lineHeight": 1.2,
  "terminal.integrated.inheritEnv": false,
  "terminal.explorerKind": "both",
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "underline",
  "terminal.integrated.rightClickBehavior": "copyPaste",
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell"
    },
    "Command Prompt": {
      "path": [
        "${env:windir}\\Sysnative\\cmd.exe",
        "${env:windir}\\System32\\cmd.exe"
      ],
      "args": [],
      "icon": "terminal-cmd"
    },
    "Git Bash": {
      "source": "Git Bash"
    },
    "Ubuntu-20.04 (WSL)": {
      "path": "C:\\WINDOWS\\System32\\wsl.exe",
      "args": ["-d", "Ubuntu-20.04"]
    }
  },
  "terminal.integrated.allowedLinkSchemes": [
    "file", "http", "https", "mailto", "vscode", "vscode-insiders", "docker-desktop"
  ],

  // ===== GIT CONFIGURATION =====
  "git.enableSmartCommit": true,
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.ignoreRebaseWarning": true,
  "git.decorations.enabled": true,
  "git.openRepositoryInParentFolders": "always",
  "gitlens.advanced.messages": {
    "suppressGitMissingWarning": true
  },
  "gitlens.gitCommands.skipConfirmations": [
    "fetch:command", "switch:command", "remote-add:command"
  ],
  "gitlens.ai.experimental.provider": "openai",
  "gitlens.currentLine.enabled": true,
  "gitlens.ai.experimental.openai.model": "gpt-4",

  // ===== EXPLORER & FILE MANAGEMENT =====
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmPasteNative": false,
  "explorer.sortOrder": "type",
  // "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": true,

  // ===== EDITOR CORE SETTINGS =====
  "editor.fontFamily": "'JetBrains Mono', 'Fira Code', 'SF Mono', 'Cascadia Code', 'MesloLGS NF', 'Geist Mono', monospace",
  "editor.fontSize": 14,
  "editor.fontWeight": "400",
  "editor.lineHeight": 1.5,
  "editor.letterSpacing": 0.5,
  "editor.fontLigatures": true, // Enables all common ligatures
  "editor.cursorBlinking": "expand",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorSurroundingLines": 3,
  "editor.cursorSurroundingLinesStyle": "all",
  "editor.padding.top": 5,
  "editor.padding.bottom": 20,

  // ===== EDITOR BEHAVIOR =====
  "editor.accessibilityPageSize": 18,
  "editor.accessibilitySupport": "off",
  "editor.mouseWheelZoom": false,
  "editor.wordWrap": "on",
  // "editor.wordWrapColumn": 120,
  // "editor.rulers": [80, 120],
  "editor.autoClosingBrackets": "always",
  "editor.autoClosingOvertype": "always",
  "editor.autoClosingQuotes": "always",
  "editor.linkedEditing": true,
  "editor.emptySelectionClipboard": false,
  "editor.copyWithSyntaxHighlighting": false,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.wordSeparators": "`~!@#%^&*()=+[{]}\\|;:'\",.<>/?",

  // ===== EDITOR VISUAL ENHANCEMENTS =====
  "editor.minimap.enabled": false,
  "editor.lineNumbers": "relative",
  "editor.guides.indentation": true,
  "editor.guides.bracketPairs": true,
  // "editor.guides.bracketPairsHorizontal": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.renderWhitespace": "selection",
  "editor.renderControlCharacters": false,
  "editor.renderLineHighlight": "gutter",
  "editor.showFoldingControls": "always",
  "editor.foldingHighlight": true,
  "editor.unfoldOnClickAfterEndOfLine": true,

  // ===== EDITOR INTELLIGENCE =====
  "editor.suggestSelection": "first",
  "editor.suggestFontSize": 16,
  "editor.suggestLineHeight": 26,
  "editor.inlineSuggest.enabled": true,
  "editor.inlineSuggest.suppressSuggestions": false,
  "editor.quickSuggestions": {
    "other": "on",
    "comments": "off",
    "strings": "on"
  },
  "editor.quickSuggestionsDelay": 0,
  "editor.snippetSuggestions": "top",
  "editor.tabCompletion": "on",
  "editor.acceptSuggestionOnCommitCharacter": true,
  "editor.acceptSuggestionOnEnter": "on",

  // ===== CODE ACTIONS & FORMATTING =====
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "editor.formatOnPaste": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit",
    "source.fixAll.eslint": "explicit",
    "source.fixAll.stylelint": "explicit",
    "source.sortImports": "explicit",
    "source.removeUnusedImports": "explicit"
  },

  // ===== HOVER & NAVIGATION =====
  "editor.hover.enabled": true,
  "editor.hover.delay": 300,
  "editor.hover.sticky": true,
  "editor.definitionLinkOpensInPeek": true,
  "editor.gotoLocation.multipleReferences": "peek",
  "editor.gotoLocation.multipleDefinitions": "peek",
  "editor.gotoLocation.multipleDeclarations": "peek",
  "editor.gotoLocation.multipleImplementations": "peek",
  "editor.gotoLocation.multipleTypeDefinitions": "peek",

  // ===== VISUAL NOISE REDUCTION =====
  "breadcrumbs.enabled": false,
  "editor.lightbulb.enabled": "off",
  "editor.selectionHighlight": false,
  "editor.occurrencesHighlight": "off",
  "editor.overviewRulerBorder": false,
  "editor.hideCursorInOverviewRuler": true,
  "editor.matchBrackets": "always",
  "editor.colorDecorators": true,
  "editor.unicodeHighlight.invisibleCharacters": false,
  "editor.unicodeHighlight.ambiguousCharacters": false,
  "scm.diffDecorations": "gutter",
  "problems.decorations.enabled": true,

  // ===== WORKBENCH LAYOUT =====
  "workbench.sideBar.location": "right",
  "workbench.activityBar.location": "bottom",
  "workbench.editor.centeredLayoutFixedWidth": true,
  "workbench.editor.editorActionsLocation": "titleBar",
  "workbench.editor.showTabs": "multiple",
  "workbench.editor.tabSizing": "fixed",
  "workbench.editor.enablePreview": true,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.editor.empty.hint": "hidden",
  "workbench.editor.autoLockGroups": {
    "jsProfileVisualizer.cpuprofile.table": true
  },
  "workbench.tree.indent": 10,
  "workbench.tree.renderIndentGuides": "always",
  "workbench.tree.enableStickyScroll": false,
  "workbench.list.horizontalScrolling": false,
  "workbench.view.alwaysShowHeaderActions": true,

  // ===== WINDOW & APPEARANCE =====
  "window.titleBarStyle": "custom",
  "window.customTitleBarVisibility": "auto",
  "window.menuBarVisibility": "compact",
  "window.newWindowDimensions": "inherit",
  "window.nativeFullScreen": true,
  "window.newWindowProfile": "Default",
  "workbench.startupEditor": "none",
  "workbench.tips.enabled": false,
  "workbench.colorTheme": "Catppuccin Frapp√©",
  "workbench.iconTheme": "symbols",

  // ===== CUSTOM THEME INTEGRATION =====
  "workbench.colorCustomizations": {
    "editor.background": "#0d1117",
    "sideBar.background": "#010409",
    "activityBar.background": "#010409",
    "panel.background": "#0d1117",
    "statusBar.background": "#010409",
    "titleBar.activeBackground": "#010409",
    "tab.activeBackground": "#21262d",
    "tab.inactiveBackground": "#0d1117",
    "editorGroupHeader.tabsBackground": "#010409"
  },

  // ===== ENHANCED TOKEN CUSTOMIZATION =====
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": [
          "comment",
          "comment.block",
          "comment.line",
          "keyword",
          "storage",
          "variable.language",
          "keyword.control",
          "keyword.operator",
          "storage.type",
          "storage.modifier",
          "variable.language",
          "entity.other.attribute-name.html",
          "entity.other.attribute-name",
          "entity.name.tag.css",
          "support.type.property-name.css"
        ],
        "settings": {
           "fontStyle": "italic"
        }
      },
      {
        "scope": [
          "string",
          "string.quoted"
        ],
        "settings": {
          "fontStyle": ""
        }
      }
    ]
  },

  // ===== LANGUAGE SPECIFIC SETTINGS =====
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    }
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.autoIndent": "advanced",
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.autoIndent": "advanced"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.suggest.insertMode": "replace"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.wordWrap": "on",
    "editor.quickSuggestions": {
      "comments": "on",
      "strings": "on",
      "other": "on"
    }
  },
  "[python]": {
    "editor.formatOnType": true,
    "editor.wordBasedSuggestions": "off"
  },

  // ===== PRETTIER CONFIGURATION =====
  "prettier.requireConfig": true,
  "prettier.useEditorConfig": false,
  "prettier.tabWidth": 2,
  "prettier.semi": true,
  "prettier.singleQuote": true,
  "prettier.trailingComma": "es5",
  "prettier.printWidth": 100,

  // ===== EMMET CONFIGURATION =====
  "emmet.includeLanguages": {
    "blade": "html",
    "vue-html": "html",
    "vue": "html",
    "react": "html",
    "javascript": "html",
    "typescriptreact": "html",
    "markdown": "html"
  },
  "emmet.triggerExpansionOnTab": true,
  "emmet.showExpandedAbbreviation": "always",

  // ===== JAVASCRIPT/TYPESCRIPT =====
  "javascript.validate.enable": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.tsserver.experimental.enable": true,
  "typescript.tsserver.log": "off",
  "js/ts.implicitProjectConfig.checkJs": true,
  "js/ts.implicitProjectConfig.experimentalDecorators": true,
  "typescript.preferences.quoteStyle": "single",
  "javascript.preferences.quoteStyle": "single",

  // ===== AI/COPILOT INTEGRATION =====
  "github.copilot.enable": {
    "*": true,
    "yaml": true,
    "plaintext": true,
    "markdown": true,
    "python": true,
    "javascript": true,
    "typescriptreact": true,
    "typescript": true,
    "vue": true,
    "css": true,
    "scss": true,
    "json": true
  },
  "github.copilot.editor.enableAutoCompletions": true,
  "github.copilot.advanced": {
    "listCount": 10,
    "inlineSuggestCount": 3
  },
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "tabnine.experimentalAutoImports": true,

  // ===== TAILWIND CSS =====
  "tailwindCSS.includeLanguages": {
    "plaintext": "html",
    "vue": "html",
    "react": "html",
    "javascript": "html",
    "typescript": "html"
  },
  "tailwindCSS.experimental.configFile": null,
  "tailwindCSS.experimental.classRegex": [
    ["clsx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"],
    ["classnames\\(([^)]*)\\)", "'([^']*)'"],
    ["cn\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
  ],

  // ===== DIFF EDITOR =====
  "diffEditor.codeLens": true,
  "diffEditor.ignoreTrimWhitespace": true,
  "diffEditor.renderSideBySide": true,
  "diffEditor.wordWrap": "on",
  "diffEditor.hideUnchangedRegions.enabled": true,

  // ===== FILE HANDLING =====
  "files.autoGuessEncoding": true,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.eol": "\n",
  "files.hotExit": "onExitAndWindowClose",

  // ===== EXTENSIONS & INTEGRATIONS =====
  "extensions.ignoreRecommendations": false,
  "extensions.autoUpdate": "onlyEnabledExtensions",
  "liveServer.settings.donotShowInfoMsg": true,
  "appService.showSavePrompt": false,
  "npm.keybindingsChangedWarningShown": true,
  "borderless.autoenable": true,
  "bracket-pair-colorizer-2.depreciation-notice": false,
  "python.defaultInterpreterPath": "C:\\Users\\adity\\miniconda3\\envs\\yolo\\python.exe",
  "python.analysis.autoImportCompletions": true,
  "python.analysis.fixAll": ["source.unusedImports"],
  "php.suggest.basic": false,

  // ===== AWS & CLOUD =====
  "aws.profile": "profile:thisisamazing",

  // ===== CODESNAP =====
  "codesnap.containerPadding": "2em",
  "codesnap.boxShadow": "rgba(0, 0, 0, 0.55) 0px 12px 24px",
  "codesnap.shutterAction": "copy",
  "codesnap.showWindowControls": true,
  "codesnap.backgroundColor": "#1e1e2e",

  // ===== CHAT & AI =====
  "chat.editor.wordWrap": "on",

  // ===== ADVANCED FEATURES =====
  "editor.stickyScroll.enabled": false,
  "editor.stickyScroll.maxLineCount": 5,
  "workbench.editor.pinnedTabSizing": "compact",
  "workbench.editor.wrapTabs": true,
  "workbench.editor.decorations.badges": true,
  "workbench.editor.decorations.colors": true,

  // ===== CUSTOM CSS & ANIMATIONS =====
  "vscode_custom_css.imports": [
    "file:///Users/aditya/custom-vscode.css",
    "file:///Users/aditya/custom-vscode-script.js"
  ],
  "animations.Install-Method": "Apc Customize UI++",
  "apc.imports": [
    "file://${userHome}/.vscode/extensions/brandonkirbyson.vscode-animations-2.0.7/dist/updateHandler.js"
  ],

  // ===== SYNC SETTINGS =====
  "settingsSync.ignoredSettings": [
    "editor.fontFamily",
    "python.defaultInterpreterPath",
    "vscode_custom_css.imports"
  ],
  "workbench.settings.applyToAllProfiles": [],
  "docker.extension.enableComposeLanguageServer": false,
  "roo-cline.allowedCommands": [
    "npm test",
    "npm install",
    "tsc",
    "git log",
    "git diff",
    "git show"
  ]
}
